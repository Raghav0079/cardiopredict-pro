# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===============================================
# OPTIONAL: Database Integration (Supabase)
# ===============================================
# Only needed if you want to store patient data
# For educational use, you can leave these empty
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# Example:
# SUPABASE_URL=https://xyzcompany.supabase.co
# SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===============================================
# OPTIONAL: Analytics Integration (WandB)
# ===============================================
# Only needed if you want to track model performance
# For basic usage, you can leave these empty
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=cardiopredict-pro
WANDB_ENTITY=your_wandb_username_or_team

# Example:
# WANDB_API_KEY=1234567890abcdef1234567890abcdef12345678
# WANDB_PROJECT=cardiopredict-pro
# WANDB_ENTITY=your_username

# ===============================================
# APPLICATION SETTINGS
# ===============================================
# Basic application configuration
APP_NAME=CardioPredict Pro
APP_VERSION=1.0.0
APP_DEBUG=false
APP_PORT=7860

# ===============================================
# SECURITY SETTINGS
# ===============================================
# Security configuration for production deployments
SECRET_KEY=generate_a_secure_random_key_here
SESSION_TIMEOUT=3600
MAX_PREDICTIONS_PER_HOUR=100

# ===============================================
# DEPLOYMENT SETTINGS
# ===============================================
# Configuration for different deployment environments

# For local development
ENVIRONMENT=development
HOST=localhost
PORT=7860

# For Hugging Face Spaces (automatically set)
# SPACE_ID=username/cardiopredict-pro
# SPACE_HOST=0.0.0.0
# SPACE_PORT=7860

# For custom cloud deployment
# CLOUD_PROVIDER=aws|gcp|azure
# DEPLOYMENT_REGION=us-east-1

# ===============================================
# MEDICAL COMPLIANCE SETTINGS
# ===============================================
# Settings for medical compliance and disclaimers
MEDICAL_DISCLAIMER_ENABLED=true
PATIENT_DATA_RETENTION_DAYS=0
AUDIT_LOGGING_ENABLED=true
HIPAA_COMPLIANCE_MODE=false

# ===============================================
# PERFORMANCE SETTINGS
# ===============================================
# Configuration for model performance and caching
MODEL_CACHE_ENABLED=true
PREDICTION_TIMEOUT_SECONDS=30
MAX_CONCURRENT_PREDICTIONS=10

# ===============================================
# MONITORING SETTINGS
# ===============================================
# Application monitoring and logging
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_ENABLED=true
ERROR_TRACKING_ENABLED=true

# ===============================================
# FEATURE FLAGS
# ===============================================
# Enable/disable specific features
ENABLE_PDF_REPORTS=true
ENABLE_DATABASE_INTEGRATION=false
ENABLE_ANALYTICS_TRACKING=false
ENABLE_BATCH_PREDICTIONS=false
ENABLE_API_ACCESS=false

# ===============================================
# RATE LIMITING
# ===============================================
# Protection against abuse
RATE_LIMIT_ENABLED=true
REQUESTS_PER_MINUTE=60
REQUESTS_PER_HOUR=1000

# ===============================================
# EMAIL NOTIFICATIONS (Optional)
# ===============================================
# For error notifications and alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ADMIN_EMAIL=admin@yourdomain.com

# ===============================================
# CUSTOM MODEL SETTINGS
# ===============================================
# Advanced model configuration
MODEL_RANDOM_STATE=42
MODEL_ENSEMBLE_VOTING=soft
MODEL_CALIBRATION_ENABLED=true
FEATURE_SELECTION_ENABLED=false

# ===============================================
# INTEGRATION SETTINGS
# ===============================================
# Third-party service integrations

# GitHub (for version control integration)
GITHUB_TOKEN=your_github_personal_access_token

# Docker (for containerized deployment)
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# Cloud Storage (for large file handling)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=cardiopredict-storage

# ===============================================
# DATABASE ADVANCED SETTINGS
# ===============================================
# Advanced database configuration (if using custom DB)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cardiopredict
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password
DB_SSL_MODE=require
DB_CONNECTION_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30

# ===============================================
# BACKUP AND RECOVERY
# ===============================================
# Data backup configuration
BACKUP_ENABLED=false
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# ===============================================
# LEGAL AND COMPLIANCE
# ===============================================
# Legal and regulatory settings
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
GDPR_COMPLIANCE_ENABLED=true
COOKIE_CONSENT_ENABLED=true

# ===============================================
# DEVELOPMENT SETTINGS
# ===============================================
# Settings for development and testing
DEVELOPMENT_MODE=false
ENABLE_DEBUG_ROUTES=false
MOCK_EXTERNAL_SERVICES=false
SYNTHETIC_DATA_ENABLED=true

# ===============================================
# DOCUMENTATION
# ===============================================
# How to use these environment variables:

# 1. COPY this file to .env
#    cp .env.example .env

# 2. FILL IN the values you need
#    Most variables are optional and have sensible defaults

# 3. REQUIRED for basic usage:
#    - No variables are strictly required
#    - App will work with default settings

# 4. REQUIRED for database features:
#    - SUPABASE_URL
#    - SUPABASE_KEY

# 5. REQUIRED for analytics:
#    - WANDB_API_KEY
#    - WANDB_PROJECT

# 6. SECURITY NOTES:
#    - Never commit .env file to version control
#    - Use strong, unique keys for production
#    - Rotate keys regularly
#    - Use different values for different environments

# 7. GETTING API KEYS:
#    - Supabase: https://app.supabase.com/ > Create Project > Settings > API
#    - WandB: https://wandb.ai/settings > API Keys
#    - GitHub: https://github.com/settings/tokens

# 8. ENVIRONMENT-SPECIFIC FILES:
#    - .env.development (for development)
#    - .env.staging (for staging)
#    - .env.production (for production)
#    - .env.test (for testing)

# ===============================================